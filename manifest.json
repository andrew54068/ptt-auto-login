{
  "manifest_version": 3,
  "name": "PTT Auto Login & Image Preview",
  "version": "1.0.0",
  "description": "Auto-login to PTT and preview images on hover",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://term.ptt.cc/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://term.ptt.cc/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
